{{ 'custom-collectins.css' | asset_url |stylesheet_tag }}

{% style %}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .custom-collections__button-{{ section.id }}{
    background:{{ section.settings.button_bg }};
    color:{{ section.settings.button_color }};
  }
{% endstyle %}

<div class="custom-collectins padding-{{ section.id }}">
  <div class="page-width">
    <div class='custom-collectins__heading-Container'>
      {% if section.settings.section_heading != blank %}
        <h2 class="heading h2 h0">{{ section.settings.section_heading }}</h2>
      {% endif %}
      {% if section.settings.button_text != blank %}
        <a
          {% if section.settings.button_link == blank %}
          role="link" aria-disabled="true"
          {% else %}
          href="{{ section.settings.button_link }}"
          {% endif %}
          class="btn-animate custom-collections__button-{{ section.id }} button"
      >
          <span class='rich-text-coustom__button_text'>{{- section.settings.button_text | escape -}}</span>
      </a>
      {% endif %}
    </div>
    <div class="grid grid--1-col grid--2-col-tablet grid--4-col-desktop">
      {% for product in section.settings.product_list %}
        <div class="grid__item">
          {% render 'product-card', product: product, section_id: section.id %}
        </div>
      {% else %}
        {% for i in (1..8) %}
          <div class="grid__item">
            <div class="media media--square">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{%  schema %}
{
  "name": "Custom collectins",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Customize Heading and button"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Click me"
    },
    {
      "type": "url",
      "label": "Button Link",
      "id": "button_link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#000000"
    },
    {
        "type": "product_list",
        "id": "product_list",
        "label": "Products",
        "limit": 8
    },      
    {
      "type": "header",
      "content": "Customize section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Custom collectins"
    }
  ]
}
{%  endschema %}